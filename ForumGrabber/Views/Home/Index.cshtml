@model ForumGrabber.Models.CriteriaModel

@{
    ViewBag.Title = "Критерии";
}

<script>
    $(document).ready(function ()
    {
        $('#SearchById').click(function ()
        {
            if ($(this).prop("checked"))
            {
                $(".idfield").show();
                $(".namefield").hide();
            }
            else
            {
                $(".idfield").hide();
                $(".namefield").show();
            }
        });
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Введите критерии отбора</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SearchById)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SearchById)
            @Html.ValidationMessageFor(model => model.SearchById)
        </div>

        <div class="editor-label idfield" style="display:none;">
            @Html.LabelFor(model => model.UserId)
        </div>
        <div class="editor-field idfield" style="display:none;">
            @Html.EditorFor(model => model.UserId)
            @Html.ValidationMessageFor(model => model.UserId)
        </div>

        <div class="editor-label namefield">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field namefield">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PagesCount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PagesCount)
            @Html.ValidationMessageFor(model => model.PagesCount)
        </div>

        <p>
            <input type="submit" value="Выбрать сообщения пользователя" />
        </p>
    </fieldset>
    if (ViewBag.PostsCount != null)
    {
        <div>
            Найдено сообщений: @ViewBag.PostsCount.
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
